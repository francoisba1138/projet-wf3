{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion</h1>

    <form method="post">
        <tr class="form-group">
            <label>Email</label>
            <input type="text" name="_username" class="form-control"
                   value="{{ last_username }}">
        </tr>
        <tr class="form-group">
            <label>Mot de passe</label>
            <input type="password" name="_password" class="form-control">
        </tr>
        <tr class="text-right">
            <button type="submit" class="btn btn-primary mt-2">
                Se connecter
            </button>
        </tr>
    </form>
{% endblock %}