{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="well">
            <div class="media">
                <a class="pull-left">
                    {{ game.cover }}
                </a>
                <div class="media-body">
                    <h4 class="media-heading">{{ game.title }}</h4>
                    <ul class="list-inline list-unstyled">
                        <p>{{ game.platform }}</p>
                        <p>{{ game.date.format("d-m-Y") }}</p>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
