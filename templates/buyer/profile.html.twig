{% extends 'base.html.twig' %}

{% block body %}
    <div id="front" class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >


                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ buyer.firstname}} {{ buyer.lastname }}</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3 col-lg-3 " align="center">
                                {%  if buyer.image %}
                                    <img src="{{ asset('/img/profile/' ~ buyer.image) }}" height="200px">
                                {% endif %}
                            </div>
                            <div class=" col-md-9 col-lg-9 pl-5">
                                <table class="table table-user-information">
                                    <tbody>
                                    <tr>
                                        <td>Email</td>
                                        <td><a>{{ buyer.email }}</a></td>
                                    </tr>
                                    <tr>
                                        <td>A propos de {{ buyer.firstname}}</td>
                                        <td>{{ buyer.presentation}}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    {% if app.user %}
    {% if app.user.id == buyer.id %}
        <a class="btn btn-primary" href="{{ path('app_buyer_edit', {'id': app.user.id }) }}">Modifier</a>
    {% endif %}
    {% endif %}
{% endblock %}

