
{% extends 'base.html.twig' %}
{% block title %}Liste des annonces{% endblock %}

{% block body %}

    <h1>Gestion Annonces</h1>


    <table class="table table-responsive-md bg-custom table-hover">
        <tr>
            <th >ID</th>
            <th>Titre</th>
            <th>Vendeur</th>
            <th>Jeu</th>
            <th>Conditions</th>
            <th>Acheteur</th>
            <th>Statut</th>
            <th></th>


        </tr>


        {%  for ad in ads %}


        <tr>
            <td>{{ ad.id }}</td>
            <td>{{ ad.title }}</td>
            <td>{{ad.seller }}</td>
            <td>{{ad.game }}</td>
            <td>{{ad.cond }}</td>
            <td>{{ad.buyer }}</td>
            <td>{{ad.status }}</td>


            <td><a href="{{ path('app_admin_ad_detail', {'id': ad.id }) }}" class="btn btn-outline-primary btn-sm mb-3"><i class="fas fa-pencil-alt"></i></a>

                <a href="{{ path('app_admin_ad_delete', {'id': ad.id }) }}" class="btn btn-outline-danger btn-delete btn-sm mb-3"><i class="fas fa-trash"></i></a>

                <a href="{{ path('app_admin_ad_ajaxcontent', {'id': ad.id }) }}" class="btn btn-outline-secondary btn-user-content btn-sm mb-3"><i class="fas fa-eye"></i></a></td>



            {% endfor %}

    </table>
    {# Modale suppression #}
    <div class="modal" tabindex="-1" role="dialog" id="modal-confirm-delete">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Etes-vous sûr.e de vouloir supprimer cette annonce</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-primary btn-confirm-delete">Oui</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                </div>
            </div>
        </div>
    </div>


    {# Modale aperçu du membre #}
    <div class="modal" tabindex="-1" role="dialog" id="modal-user-content">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Aperçu</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script src="{{ asset('js/admin_user.js') }}"></script>

{% endblock %}