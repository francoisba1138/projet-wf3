{% extends 'base.html.twig' %}
{% block title %}{{ game.title }}{% endblock %}

{% block body %}


    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.platform) }}
    {{ form_row(form.date) }}
    {%  if original_image %}
        <img src="{{ asset('img/cover/' ~ original_image) }}" height="200px">
    {% endif %}
    {{  form_row(form.cover) }}




    <input type="submit" value="Modifier" class="btn btn-outline-primary mb-3">
    {{ form_end(form) }}




{% endblock %}